@using GestaoDeEquipamentos.WebApp.Models

@model CadastrarFabricanteViewModel;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Cadastro de Fabricante - Gestão de Equipamentos</title>
</head>
<body>
    <h1>Gestão de Equipamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/fabricantes/visualizar">Visualizar Fabricantes</a>

    <hr />

    <h3>Cadastro de Fabricante</h3>

    <form action="/fabricantes/cadastrar" method="post">
        <label for="nome">Nome do Fabricante:</label>
        <br />
        <input type="text" id="nome" name="nome" />

        <br />

        <label for="email">E-mail do Fabricante:</label>
        <br />
        <input type="text" id="email" name="email" />
        
        <br />

        <label for="telefone">Telefone do Fabricante:</label>
        <br />
        <input type="text" id="telefone" name="telefone" />

        <hr />

        <button type="submit">Gravar</button>
    </form>

</body>
</html>