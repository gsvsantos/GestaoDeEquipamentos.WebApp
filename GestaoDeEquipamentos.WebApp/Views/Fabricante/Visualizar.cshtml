@using GestaoDeEquipamentos.WebApp.Models

@model VisualizarFabricantesViewModel;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Visualização de Fabricantes - Gestão de Equipamentos</title>
</head>
<body>
<h1>Gestão de Equipamentos</h1>

<hr />

<a href="/">Voltar</a> /
<a href="/fabricantes/cadastrar">Cadastrar Novo Fabricante</a> /

<hr />

<h3>Visualização de Fabricantes</h3>

<ul>
	@if (Model.Registros.Count == 0)
	{
		<li>Nenhum fornecedor cadastrado.</li>
	}

	@foreach (DataFabricanteViewModel f in Model.Registros)
	{
	<li>@f / <a href="/fabricantes/editar/@f.Id">Editar</a> /
		<a href="/fabricantes/excluir/@f.Id">Excluir</a> </li>
	}
</ul>
</body>
</html>